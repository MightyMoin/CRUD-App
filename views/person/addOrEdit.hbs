<h3>{{viewT}}</h3>

<form action="/dashboard" method="POST" autocomplete="off"> {{! Handling POST form datas}}
<input type="hidden" name="_id" value="{{person._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{person.fullName}}">
        <div class="text-danger">
            {{person.fullNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{person.email}}">  
        <div class="text-danger">
            {{person.emailError}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{person.mobile}}">    
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{person.city}}">    
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
            <a class="btn btn-secondary" href="/dashboard/list"><i class="fa fa-list-alt"></i>View All</a>
        </div>
    </div>
</form>
